<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:EasyLayout.Sample.Controls"
             x:Class="EasyLayout.Sample.Controls.TraditionalProductView">

    <ContentView.Content>
        <StackLayout Orientation="Horizontal">
            <Image x:Name="Image" />
            <StackLayout Orientation="Vertical">
                <controls:PerfLabel x:Name="Title" Text="Select A Product" FontSize="Medium" />
                <controls:PerfLabel x:Name="Category" Text="" FontSize="Micro" />
            </StackLayout>
        </StackLayout>
    </ContentView.Content>
</ContentView>