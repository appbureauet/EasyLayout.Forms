<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:EasyLayout.Sample.Controls"
             x:Class="EasyLayout.Sample.Controls.TraditionalProductView">

    <ContentView.Content>
        <StackLayout Orientation="Horizontal" Padding="10">
            <Image x:Name="Image" WidthRequest="48" HeightRequest="48" />
            <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand">
                <controls:PerfLabel x:Name="Title" Text="" TextColor="White" FontSize="Medium" FontAttributes="Bold" />
                <controls:PerfLabel x:Name="Category" Text="" TextColor="White" FontSize="Small" />
            </StackLayout>
            <Button Text="Confirm" BackgroundColor="#175689" IsVisible="False" x:Name="Confirm" StyleClass="Default" HorizontalOptions="End" />
        </StackLayout>
    </ContentView.Content>
</ContentView>